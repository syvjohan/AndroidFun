<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="johan.laboration2_ab5785" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo" >

        <!--Start the application with a splash screen-->
        <activity
            android:name=".chat_app.Activity.SplashActivity"
            android:label="@string/app_welcome"
            android:screenOrientation="portrait" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main activity -->
        <activity
            android:name="johan.laboration2_ab5785.chat_app.Activity.MainActivity"
            android:label="@string/app_home" >
        </activity>

        <!-- Sub activity-->
        <activity
            android:name="johan.laboration2_ab5785.chat_app.Activity.ChatActivity"
            android:label="@string/app_chat" >
        </activity>
    </application>

</manifest>
