<resources>

    <!-- Base application theme. -->
    <style name="MyTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    //fragment_summary
    <style name="textViews_row">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:ellipsize">none</item>
    </style>

    <style name="textViews_summary_text">
        <item name="android:text">@string/fragment_summary_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/abc_text_size_small_material</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_weight">.20</item>
    </style>

    <style name="linearLayout_sum">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">.15</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="linearLayout_pie">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">.55</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="textviews_summary_content">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">.80</item>
        <item name="android:layout_margin">2dp</item>
    </style>
    //END, fragment_summary

    // Error messages
    <style name="error_msg">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:ellipsize">none</item>
        <item name="android:maxLines">100</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/err_msg_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
    </style>
    //END, Error messages

    <style name="btn_add">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@color/btn_add</item>
        <item name="android:text">Add</item>
    </style>

    <style name="editText_input_data">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@color/edittext_backgr</item>
    </style>

    <style name="listView_show_data">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:dividerHeight">5dp</item>
        <item name="android:divider">@color/lstDivider</item>
        <item name="android:fastScrollEnabled">true</item>
    </style>

    <style name="bottom_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="top_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

</resources>
