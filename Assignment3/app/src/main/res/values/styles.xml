<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="textViews_row">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:ellipsize">none</item>
    </style>

    <style name="error_msg">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:ellipsize">none</item>
        <item name="android:maxLines">100</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#880000 </item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="btn_add">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">#D7C5E0</item>
        <item name="android:text">Add</item>
    </style>

    <style name="editText_input_data">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:hint">write title here</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">#CBCBB2</item>
    </style>

    <style name="listView_show_data">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:dividerHeight">5dp</item>
        <item name="android:fastScrollEnabled">true</item>
    </style>

    <style name="bottom_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="top_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

</resources>
